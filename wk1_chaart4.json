{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Inflation",
      "anchor": "start",
      "subtitle": "CPI, % | Source: PSA through ECO API",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "height": 250,
    "width": "container",
    "autosize": {"type": "fit", "contains": "padding", "resize": false},
    "background": "#ffffff",
    "view": {"fill": "#ffffff", "strokeOpacity": 0},
    "data": {
      "url": "https://api.economicsobservatory.com/phl/infl?vega",
      "format": {"type": "json"}
    },
    "mark": {"type": "line", "color": "#f46d13", "strokeWidth": 2},
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {"title": "", "titleColor": "#122B39", "grid": false}
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {"title": "", "titleColor": "#122B39", "grid": false}
      }
    }
  }